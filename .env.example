# Polymarket API Credentials
# NOTE: API credentials are auto-generated from your private key
# You only need to provide POLYMARKET_PRIVATE_KEY
POLYMARKET_API_KEY=
POLYMARKET_API_SECRET=
POLYMARKET_API_PASSPHRASE=
POLYMARKET_PRIVATE_KEY=your_ethereum_private_key_here

# Network Configuration
CHAIN_ID=137
RPC_URL=https://polygon-rpc.com

# Wallet Configuration
# SIGNATURE_TYPE: 0=EOA/MetaMask (default), 1=Email/Magic wallet, 2=Browser proxy
SIGNATURE_TYPE=0
# FUNDER: Only needed for proxy/email wallets (leave empty for regular wallets)
FUNDER=

# Trading Configuration
MAX_POSITION_SIZE=100.0
MAX_SLIPPAGE=0.02
DRY_RUN=true

# Bot Behavior
POLL_INTERVAL=60
LOG_LEVEL=INFO
